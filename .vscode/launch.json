{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch localhost",
      "type": "firefox",
      "request": "launch",
      "url": "http://127.0.0.1:8080",
      "webRoot": "",
      "firefoxExecutable": "C:\\Program Files\\Nightly\\firefox.exe",
      "log": {
        "consoleLevel": {
          "PathConversion": "Debug",
          "default": "Error"
        }
      },
      "pathMappings": [
        {
          "url": "http://127.0.0.1:8080",
          "path": "${workspaceRoot}"
        }
      ],
      "reloadOnChange": {
        "watch": [
          "${workspaceRoot}/**/*.js",
          "${workspaceRoot}/**/*.htm",
        ]
      }
    }
  ]
}